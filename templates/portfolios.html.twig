{% extends 'base.html.twig' %}

{% block body %}
    {{ parent() }}

    <h2>Portfolios</h2>

    <div class="portfolios">
        <a href="{{ path("new_portfolio") }}">Create a new Portfolio</a>

        {% for portfolio in logged.portfolios %}
            <div class="portfolio border my-2 p-2">
                <a href={{ path("portfolio", {'id': portfolio.id}) }}>{{ portfolio.name }}</a>

                <a href={{ path("edit_portfolio", {'id': portfolio.id}) }}>Edit</a>
                <a href={{ path("delete_portfolio", {'id': portfolio.id}) }}>Delete</a>
            </div>
        {% endfor %}
    </div>
{% endblock %}
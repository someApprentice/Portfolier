<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Portfolier{% endblock %}</title>

        {% block stylesheets %}
            <link rel="stylesheet" href="/css/bootstrap.min.css">
        {% endblock %}

        {% block javascripts %}
            <script src="/js/bootstrap.min.js"></script>
        {% endblock %}
    </head>
    <body>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            {% block header %}
                <h1 class="navbar-brand"><a href="{{ path('index') }}">Portfolier</a></h1>
                
                {% if logged is defined %}
                      <div class="collapse navbar-collapse">
                        <div class="navbar-nav">
                          <a class="nav-item nav-link" href="{{ path('portfolios') }}">Portfolios</a>
                        </div>
                      </div>

           
                    <form name="logout-form" method="post" class="form-inline" action="/logout/">
                        <div class="form-group">
                             <label class="col-sm-2 col-form-label">{{ logged.getUserName }}</label>
                        </div>

                        <input type="submit" name="logout" class="btn btn-outline-success" value="Logout">
                    </form>
                {% endif %}
            {% endblock %}
        </nav>

        <div class="container">
            {% block body %}
            {% endblock %}
        </div>
    </body>
</html>
